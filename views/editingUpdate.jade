extends index

block content
  a.btn(href="/form/complete/#{entryId}") View History
  h2 #{formName}
  form.form-horizontal(method="post", id="editingUpdateForm", action="/form/editUpdate")
    div.control-group
      label.control-label(for="entryId") Entry Id :
      div.controls
        input(type="text", name="entryId", id="entryId", readonly="readonly", value="#{entryId}")
    div.control-group
      label.control-label(for="editingCompDate") Editing Completion Date :
      div.controls
        input.input-small(type="text", name="editingCompDate", id="editingCompDate", readonly="readonly")
    div.control-group
      label.control-label(for="editedImagePath") Edited Image Path :
      div.controls
        input(type="text", name="editedImagePath", id="editedImagePath")

    input.btn.btn-primary(type="submit", value="Save")
